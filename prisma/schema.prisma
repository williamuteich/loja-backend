// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "sqlite"
}

model team {
  id        String   @id @default(uuid())
  name      String
  lastName  String
  email     String   @unique
  password  String
  role      Role     @default(COLLABORATOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model client {
  id        String   @id @default(uuid())
  name      String
  lastName  String
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  COLLABORATOR
  CLIENT
}

model Product {
  id            String   @id @default(uuid())
  title         String
  description   String?
  price         Float
  discountPrice Float?
  specs         Json?
  quantity      Int      @default(0)
  imgUrls       Json?
  createdAt     DateTime @default(now())
}
