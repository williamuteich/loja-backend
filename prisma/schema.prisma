// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

model team {
  id        String   @id @default(uuid())
  name      String
  lastName  String
  email     String   @unique
  password  String
  role      Role     @default(COLLABORATOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model client {
  id        String   @id @default(uuid())
  name      String
  lastName  String
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  COLLABORATOR
  CLIENT
}

model Product {
  id            String           @id @default(uuid())
  title         String
  description   String?
  price         Float
  discountPrice Float?
  specs         Json?
  createdAt     DateTime        @default(now())

  variants      ProductVariant[]

  images        ProductImage[]
  categories    ProductCategory[]

  brand         Brand?           @relation(fields: [brandId], references: [id])
  brandId       String?
}

model ProductVariant {
  id         String   @id @default(uuid())
  color      String
  quantity   Int      @default(0)

  product    Product  @relation(fields: [productId], references: [id])
  productId  String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ProductImage {
  id         String   @id @default(uuid())
  url        String

  product    Product  @relation(fields: [productId], references: [id])
  productId  String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ProductCategory {
  product     Product  @relation(fields: [productId], references: [id])
  productId   String

  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String

  @@id([productId, categoryId])
}

model Category {
  id          String            @id @default(uuid())
  name        String            @unique
  description String?
  imageUrl    String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  products    ProductCategory[]
}

model Brand {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model banner {
  id String @id @default(uuid())
  title String
  subtitle String?
  linkUrl String?
  imageDesktop String?
  imageMobile String?
  resolutionDesktop String?
  resolutionMobile String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model newsletter {
  id         String   @id @default(uuid())
  email      String   @unique
  whatsapp   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model StoreConfiguration {
  id String @id @default(uuid())

  // ===== Controle do Site =====
  isActive           Boolean @default(true)   // liga/desliga o site
  maintenanceMode    Boolean @default(false)  // modo manutenção
  maintenanceMessage String?                  // mensagem exibida na manutenção

  // ===== Dados da Loja =====
  storeName   String
  cnpj        String
  description String?
  phone       String?
  whatsapp    String?

  // ===== Identidade Visual =====
  logoUrl     String?
  faviconUrl  String?

  // ===== Localização =====
  googleMapsEmbedUrl String?                  // src do iframe do Google Maps

  // ===== Horário de Funcionamento =====
  businessHours String?                       // Ex: "Seg–Sex, 9h às 18h"

  // ===== Email =====
  contactEmail         String
  notifyNewOrders      Boolean @default(false)
  automaticNewsletter Boolean @default(false)

  // ===== Frete =====
  freeShippingEnabled Boolean @default(false)
  freeShippingValue   Float?
  shippingDeadline    Int?                    // prazo em dias

  // ===== Pagamentos =====
  creditCardEnabled Boolean @default(false)
  pixEnabled        Boolean @default(false)
  boletoEnabled     Boolean @default(false)

  // ===== SEO =====
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?

  // ===== Internacionalização =====
  currency String @default("BRL")
  locale   String @default("pt-BR")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

